{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-airbnb"],
  "env": {
    "browser": true,
    "jasmine": true
  },
  "rules": {
    "import-name": false,
    "interface-name": false,
    "jsx-a11y/no-static-element-interactions": false,
    "max-line-length": [true, 100],
    "object-curly-spacing": {"allowArrowFunctions" : true},
    "quotemark": [true, "single", "jsx-double"],
    "react-a11y-proptypes": true,
    "react/prefer-stateless-function": false,
    "semicolon": [true, "always"],
    "indent": [true, "spaces", 2],
    "eofline": true,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "no-string-literal": false,
    "jsx-no-bind": false,
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "no-increment-decrement": false,
    "jsx-equals-spacing": [true, "always"]
  },
  "_comment-rules": {
    "this is a comment section ignored by the build system": true,
    "These are fast ways to disable some heavy rules, do not touch or move" : true,
    "ordered-imports": false
  }
}